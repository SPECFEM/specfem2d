	@echo "building xspecfem2D with CUDA 4 support"
	@echo ""
	${LINK} $(DEF_FFLAGS) -o ${E}/xspecfem2D $(OBJS_SPECFEM2D) $(cuda_OBJECTS) $(MPILIBS) $(CUDA_LINK)
	@echo ""

endif

else

## non-cuda version
${E}/xspecfem2D: $(OBJS_SPECFEM2D) 
	@echo ""
	@echo "building xspecfem2D without CUDA support"
	@echo ""
	${LINK} $(DEF_FFLAGS) -o ${E}/xspecfem2D $(OBJS_SPECFEM2D) $(MPILIBS)
